### System config/debug/admin
# reload the configuration file
bindsym $mod+Shift+c reload
# restart i3 inplace (preserves your layout/session, can be used to upgrade i3)
bindsym $mod+Shift+r restart

# system menu
set $sysmenu "system:  [r]eload  [l]ogout  [p]oweroff  re[b]oot"
mode $sysmenu {
    bindsym r         restart
    bindsym l         exec "i3-msg exit"
    bindsym p         exec shutdown -P now
    bindsym b         exec shutdown -r now
    bindsym Return    mode "default"
    bindsym Escape    mode "default"
}
bindsym $mod+Shift+Delete exec mode $sysmenu

# lock screen with xscreensaver
bindsym Mod1+Control+l exec xscreensaver-command -lock

# shutdown menu
#bindsym $mod+Shift+ exec xfce4-session-logout

# exit i3 (logs you out of your X session)
#set $systemLogout ""
bindsym $mod+Shift+Escape exec "i3-nagbar -t warning -m 'You pressed the exit shortcut. Do you really want to exit i3?\
 This will end your X session.' -b 'Yes, logout of i3' 'i3-msg exit' -b 'Restart' 'exec 'xterm -e 'echo hello'''"


# Start i3bar to display a workspace bar (plus the system information i3status
# finds out, if available)
bar {
	colors {
        	background #000000
	        statusline #ffffff
        	separator #aaaaaa
#				   #border #bkgrnd #text
	        focused_workspace  #000000 #cccccc #000000
	        active_workspace   #000000 #555555 #bbbbbb
	        inactive_workspace #000000 #000000 #888888
	        urgent_workspace   #000000 #4d1100 #ffffff
	        binding_mode       #2f343a #900000 #ffffff
	}

        position top
        status_command i3status -c ~/.i3/i3status.conf
        separator_symbol ":|:"
        tray_output HDMI-1
}

