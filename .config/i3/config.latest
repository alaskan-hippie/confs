## Make Own sound controls bindsym $mod+Control+Mod1 exec pactl
# audio menu
set $updateVolume "exec --no-startup-id \"pacmd list-sinks | awk '($0 ~ /\tvolume: /) {print $5}'\""
set $audiomenu "volume: [PgUp/+/] +10%/5%/1%  [PgDn/-/▼] -10%/5%/1%  [m]ute  [r]eset"
mode $audiomenu {
    bindsym Prior exec --no-startup-id pactl set-sink-volume 0 +10%
    bindsym equal exec --no-startup-id pactl set-sink-volume 0 +5%
    bindsym KP_Add exec --no-startup-id pactl set-sink-volume 0 +5%
    bindsym Up exec --no-startup-id pactl set-sink-volume 0 +1%

    bindsym Next exec --no-startup-id pactl set-sink-volume 0 -10%
    bindsym minus exec --no-startup-id pactl set-sink-volume 0 -5%
    bindsym KP_Subtract exec --no-startup-id pactl set-sink-volume 0 -5%
    bindsym Down exec --no-startup-id pactl set-sink-volume 0 -1%

    bindsym r exec --no-startup-id pactl set-sink-volume 0 100%
    bindsym m exec --no-startup-id pactl set-sink-mute 0 toggle
    bindsym Return mode "default"
    bindsym Escape mode "default"
}
bindsym $mod+Pause mode $audiomenu
